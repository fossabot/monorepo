{
  "extends": "../../foo.config.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true, // DO the typechecking on build
    "sourceMap": false,
    "strict": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext", "es2015", "es2016", "es2017", "es2018"],
    "rootDir": "./src",
    "rootDirs": ["../../packages", "../../@tunnckocore"],
    "baseUrl": "./",
    "noEmit": false,
    "declaration": true,
    "declarationDir": "./dist",
    // "outFile": "./dist/index.d.ts",
    "emitDeclarationOnly": true
  },
  "include": ["src", "src/types.d.ts"],
  "exclude": ["src/__tests__", "node_modules"]
}
