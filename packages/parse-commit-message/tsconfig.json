{
  "exclude": [
    ".git",
    "dist",
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "declarationDir": "dist/typings",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "declaration": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "allowSyntheticDefaultImports": true
  }
}
