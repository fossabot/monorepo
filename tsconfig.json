{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": false, // DO the typechecking on build
    "sourceMap": false,
    "strict": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext", "es2015", "es2016", "es2017", "es2018"],
    "paths": {
      "@tunnckocore/*": ["@tunnckocore/*/src"],
      "*": ["packages/*/src"]
    },
    "rootDir": "./",
    "baseUrl": "./",
    "noEmit": true, // DO NOT EMIT on build
    "declaration": false,
    "emitDeclarationOnly": false
  },
  "include": ["packages", "@tunnckocore"],
  "exclude": ["node_modules"]
}
