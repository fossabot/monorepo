{
  "private": true,
  "name": "tunnckocore-monorepo",
  "license": "Apache-2.0",
  "scripts": {
    "build": "lerna exec 'BABEL_ENV=build yarn build'",
    "dev": "yarn test --watch",
    "test": "jest --coverage --bail -c config/jest-dev.config.js",
    "lint": "eslint . --fix --quiet --format codeframe --ext .js,.ts,.tsx,.md,.mdx",
    "type:gen": "lerna exec --parallel 'yarn type:gen'",
    "type:check": "lerna exec --parallel 'yarn type:check'",
    "format": "prettier --write '**/*'",
    "release": "lerna publish major -m 'chore(release): publish' --no-push --no-git-tag-version -y --progress --conventional-commits --changelog-preset angular",
    "fresh:clean": "rm -rf {node_modules,yarn.lock} {packages,@tunnckocore}/*/{node_modules,dist,yarn.lock} ",
    "fresh": "yarn install && lerna bootstrap",
    "import": "lerna import -y",
    "postimport": "rm -f packages/*/{.{git,es,ed,all-,pret,nyc}*,*.md,LICENSE,*.js}"
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "babel-plugin-module-resolver": "^3.1.2",
    "eslint": "^5.12.0",
    "eslint-config-tunnckocore": "^2.0.0-rc.14",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "jest": "^23.6.0",
    "jest-runner-tsc": "^1.3.2",
    "pluggable-babel-eslint": "^0.3.0",
    "prettier": "^1.15.3",
    "typescript": "^3.2.2",
    "typescript-eslint-parser": "^21.0.2"
  },
  "workspaces": [
    "packages/*",
    "@tunnckocore/*"
  ]
}
